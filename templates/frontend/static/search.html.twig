<script type="text/javascript"  >
    $(document).ready(function () {

        $('.get-sorted').on('click', function (e) {
            let $dataSorted = $(this).data('sort');
            if ($dataSorted != null && $dataSorted != undefined){
                $('#input-sorted').val($dataSorted);
            }
            let $province = $('#search-city').val();
            if ($province != undefined){
                //$('#input-city').val($province);
                $('#input-obj').val($province);
            }

            $('.search-home-shops form').submit();

            e.preventDefault();
        });

        $('.paginate').on('click', function (e) {
            let $page = $(this).data('page');
            $('#input-paged').val($page);
            $('.search-home-shops form').submit();

            e.preventDefault();
        });


        $(document).on('click', '.city-item', function (e) {
            let $dropdownDiv = $('.city-search-dropdown');
            let $name = $(this).data('code');
            $('#input-city').val($name);
            let $nameToShow = $(this).html();
            $('#input-obj').val($nameToShow);
            $('#search-city').val($nameToShow);

            $dropdownDiv.hide();

            $('.search-home-shops form').submit();
        });
    });

</script>
