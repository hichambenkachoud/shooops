{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .search-estate {
            background: #413c46;
        }
    </style>
{% endblock %}
{% block body %}

    <div role="main" class="main">
        {#
        <section class="page-header page-header-modern bg-color-light-scale-1 page-header-md" style="padding: 30px 0;">
            <div class="container">
                <div class="row search-home">
                    {{ include('frontend/static/block-search-home.html.twig') }}
                </div>
            </div>
        </section>
#}
        <div class="container">

            <div class="row pb-5">
                <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                    <h4 class="mt-3 mb-3" style="letter-spacing: 0;color: #000; cursor: pointer;" onclick="window.history.back();">
                        <i class="fas {% if app.request.locale == 'ar' %}fa-arrow-right{% else %}fa-arrow-left{% endif %}"></i> {{ 'front.backtolist'|trans }} </h4>
                </div>
                <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                    <h4 class="mt-3 mb-3" style="letter-spacing: 0;color: #08c;">{{ shop.name }}</h4>
                </div>
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-lg-7">

                            <span class="thumb-info-listing-type thumb-info-listing-type-detail bg-color-secondary text-uppercase text-color-light font-weight-semibold p-2 pl-3 pr-3">
                                {{  shop.name }}
                            </span>

                            <div class="thumb-gallery">
                                <div class="lightbox"
                                     data-plugin-options="{'delegate': 'a', 'type': 'image', 'gallery': {'enabled': true}}">
                                    <div class="owl-carousel owl-theme manual thumb-gallery-detail show-nav-hover"
                                         id="thumbGalleryDetail">
                                        {% for image in images %}
                                            <div>
                                                <a href="{{ asset('uploads/'~ shop.images ~ '/' ~ image) }}">
                                                <span class="thumb-info thumb-info-centered-info thumb-info-no-borders text-4">
                                                    <span class="thumb-info-wrapper text-4">
                                                        <img alt="Property Detail"
                                                             src="{{ asset('uploads/'~ shop.images ~ '/' ~ image) }}"
                                                             class="img-fluid">
                                                        <span class="thumb-info-title text-4">
                                                            <span class="thumb-info-inner text-4"><i
                                                                        class="icon-magnifier icons text-4"></i></span>
                                                        </span>
                                                    </span>
                                                </span>
                                                </a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>

                                <div class="owl-carousel owl-theme manual thumb-gallery-thumbs mt"
                                     id="thumbGalleryThumbs">
                                    {% for image in images %}
                                        <div>
                                            <img alt="Property Detail"
                                                 src="{{ asset('uploads/'~ shop.images ~ '/' ~ image) }}"
                                                 class="img-fluid cur-pointer">
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-5">

                            <table class="table table-striped">
                                <colgroup>
                                    <col width="50%">
                                    <col width="50%">
                                </colgroup>
                                <tbody>
                                <tr>
                                    {% if shop.address is not empty %}
                                        <td>
                                            {{ 'front.address'|trans }}
                                        </td>
                                        <td>
                                            {{ shop.address }}
                                        </td>
                                    {% endif %}
                                </tr>
                                {% if  shop.quartier %}
                                    <tr>
                                        <td>
                                            {{ 'front.quartier'|trans }}
                                        </td>
                                        <td>
                                            {{ shop.quartier.code|lower|trans }}
                                        </td>
                                    </tr>
                                {% endif %}
                                {% if  shop.city %}
                                    <tr>
                                        <td>
                                            {{ 'front.city'|trans }}
                                        </td>
                                        <td>
                                            {{ shop.city.code|lower|trans }}
                                        </td>
                                    </tr>
                                {% endif %}
                                {% if  shop.province %}
                                    <tr>
                                        <td>
                                            {{ 'front.province'|trans }}
                                        </td>
                                        <td>
                                            {{ shop.province.code|lower|trans }}
                                        </td>
                                    </tr>
                                {% endif %}
                                {% if  shop.telephone %}
                                    <tr>
                                        <td>
                                            {{ 'front.mobilenumber'|trans }}
                                        </td>
                                        <td>
                                            {{ shop.telephone }}
                                        </td>
                                    </tr>
                                {% endif %}
                                {% if  shop.whatsapp %}
                                    <tr>
                                        <td>
                                            {{ 'front.whatsapp'|trans }}
                                        </td>
                                        <td>
                                            {{ shop.whatsapp }}
                                        </td>
                                    </tr>
                                {% endif %}

                                </tbody>
                            </table>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col">

                            <h4 class="mt-3 mb-3">{{ 'front.description'|trans }}</h4>
                            <p>{{ shop.description|nl2br }}</p>

                            <hr class="solid my-5">

                            <h4 class="mt-3 mb-3">{{ 'front.products'|trans }}</h4>
                            <div class="col-md-12 row advert-portal">
                                {% for product in products %}
                                    <div class="col-md-4 col-lg-4 col-sm-12 p-3 isotope-item home" style="padding: 6px !important;">
                                        <div class="listing-item">
                                            <a href="{{ path('single_product_details', {id: product.id }) }}" class="text-decoration-none">
                                                <div class="thumb-info thumb-info-lighten border advert">
                                                    <div class="thumb-info-wrapper m-0">

                                                        <img src="{{ asset('uploads/products/' ~ product.images ~ '/0.png') }}"
                                                             class="img-fluid" alt="{{ product.name }}" id="advert-img-{{ product.id }}" style="height: 170px;">
                                                    </div>
                                                    <div class="custom-thumb-info-title b-normal p-2">
                                                        <div class="thumb-info-inner text-4 mb-1 title" id="advert-title-{{ product.id }}">{{ product.name|striptags }}</div>
                                                        <div class="thumb-info-inner text-2 mb-2">
                                                            {% if product.subcategory %}
                                                                {{ product.subcategory.code|trans }},  {{ product.category.code|trans }}
                                                            {% elseif product.category %}
                                                                {{ product.category.code|trans }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}

                                {% if page_count >0 %}
                                    <div class="col-md-12 my-5">
                                        <ul class="pagination justify-content-center">
                                            {% if 1 != current_page %}
                                                <li class="page-item {{ (1==current_page)?'disabled':'' }}">
                                                    <a class="page-link" href="{{ (1==current_page)?'#':path('single_shop',{'page':current_page-1, 'id': shop.id, 'shop': shop.name }) }}">
                                                        <i class="fas {{ app.request.locale != 'ar' ? 'fa-angle-left' : 'fa-angle-right'}}"></i>
                                                    </a>
                                                </li>
                                            {% endif %}
                                            {%  for page in 1..page_count %}
                                                <li class="page-item {{ (page==current_page)?'active':'' }}">
                                                    <a class="page-link" href="{{ (page==current_page)?'#':path('single_shop',{'page':page,  'id': shop.id, 'shop': shop.name}) }}">{{ page }}</a>
                                                </li>
                                            {% endfor %}
                                            {% if page_count != current_page %}
                                                <li class="page-item {{ (page_count==current_page)?'disabled':'' }}">
                                                    <a class="page-link" href="{{ (page_count==current_page)?'#':path('single_shop',{'page':current_page+1,  'id': shop.id, 'shop': shop.name}) }}">
                                                        <i class="fas {{ app.request.locale == 'ar' ? 'fa-angle-left' : 'fa-angle-right'}}"></i>
                                                    </a>
                                                </li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                {% endif %}
                            </div>

                            <hr class="solid my-5">

                            <h4 class="mt-3 mb-3" id="map">{{ 'front.emplacement'|trans }}</h4>
                            <input type="hidden" id="lat" value="{{ shop.latitude }}">
                            <input type="hidden" id="long" value="{{ shop.longitude }}">
                            <div id="mapContainer" class="google-map mb-0"></div>

                        </div>
                    </div>

                </div>
                <div class="col-lg-3">
                    <aside class="sidebar">
                        <div class="agents text-color-light text-center" style="background: #0c525d;">
                            <h4 class="text-light pt-5 m-0">{{ 'front.property.agent'|trans }}</h4>
                            <div class="owl-carousel owl-theme nav-bottom rounded-nav pl-1 pr-1 pt-3 m-0"
                                 data-plugin-options="{'items': 1, 'loop': false, 'dots': false, 'nav': true}">
                                <div class="pr-2 pl-2">
                                    <a href="#" class="text-decoration-none">
												<span class="agent-thumb">
													<img class="img-fluid rounded-circle"
                                                         src="{{ asset('uploads/members/' ~ shop.member.image ) }}"
                                                         alt/>
												</span>
                                        <span class="agent-infos text-light pt-3 mb-4">
													<strong class="text-uppercase font-weight-bold">{{ shop.member.firstName ~' '~ shop.member.lastName }}</strong>
													<span class="font-weight-light">{{ shop.member.mobileNumber }}</span>
													<span class="font-weight-light">{{ shop.member.email }}</span>
												</span>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <h4 class="pt-4 mb-3 text-color-dark">{{ 'front.request.information'|trans }}</h4>
                        <p>{{ 'front.request.information.content'|trans }}</p>

                        <form class="contact-form mb-4">
                            <div class="form-row">
                                <div class="form-group col">
                                    <label>{{ 'front.fullname'|trans }} *</label>
                                    <input type="text" id="name" value=""
                                           maxlength="100" class="form-control" name="name" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label>{{ 'front.email'|trans }} *</label>
                                    <input type="email" id="email" value="" data-msg-required="Please enter your email address."
                                           data-msg-email="Please enter a valid email address." maxlength="100"
                                           class="form-control" name="email" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label>{{ 'front.subject'|trans }}</label>
                                    <input type="text" id="subject" value=""
                                           maxlength="100" class="form-control" name="subject" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <label>{{ 'front.message'|trans }} *</label>
                                    <textarea maxlength="5000" rows="6" id="message"
                                              class="form-control" name="message" required></textarea>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col">
                                    <button type="button"
                                            class="btn btn-secondary mb-lg-5"
                                            data-loading-text="Loading..." id="request-info">{{ 'front.send'|trans }}</button>
                                    {{ include('frontend/includes/include-ajax-loader.html.twig') }}
                                    <div class="contact-form-success alert alert-success d-none">
                                        {{ 'front.message.sent'|trans }}
                                    </div>
                                </div>
                            </div>
                        </form>

                    </aside>
                </div>
            </div>

        </div>

    </div>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    {{ include('/frontend/static/search.html.twig') }}
    <script type="text/javascript" src="http://js.api.here.com/v3/3.1/mapsjs-core.js"></script>
    <script type="text/javascript" src="http://js.api.here.com/v3/3.1/mapsjs-service.js"></script>
    <script type="text/javascript" src="http://js.api.here.com/v3/3.1/mapsjs-ui.js"></script>
    <script type="text/javascript" src="http://js.api.here.com/v3/3.1/mapsjs-mapevents.js"></script>
    <link rel="stylesheet" type="text/css"
          href="https://js.hereapi.cn/v3/3.0/mapsjs-ui.css" />
    <script type="text/javascript">

        $('.phone_agent').on('click', function (e) {
            let $tel = $(this).data('tel');
            $(this).children('.ws-nowrap').html($tel);
            e.preventDefault();
        });

        $('#request-info').on('click', function (e) {
            let btn = $(this);
            let name = $('#name').val();
            let subject = $('#subject').val();
            let email = $('#email').val();
            let message = $('#message').val();
            let advertId = '{{ shop.id }}';

            let loader = $('.loader');
            let successDiv = $('.contact-form-success');
            successDiv.removeClass('d-none');
            //loader.css('opacity', 1);
            btn.prop('disabled', true);
            $.ajax({
                url: "{{ path('ajax_request_info') }}",
                data: JSON.stringify({advertId: advertId, name: name, email: email, subject: subject, message: message}),
                dataType: "json",
                method : "POST",
                contentType: 'application/json',
                success: function (data) {
                    if (data.code == 0){
                        successDiv.show();
                    }
                },
                error: function (a, b, c) {
                    console.log(a, b, c);
                },
                complete:function () {
                    loader.css('opacity', 0);
                    btn.prop('disabled', false);
                    setTimeout(function(){
                        successDiv.addClass('d-none');
                    }, 3000);
                }
            });

            e.preventDefault();
        });
    </script>

