{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    <h1>Shop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ shop.name }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ shop.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ shop.latitude }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ shop.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Validated</th>
                <td>{{ shop.validated ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('shop_index') }}">back to list</a>

    <a href="{{ path('shop_edit', {'id': shop.id}) }}">edit</a>

    {{ include('shop/_delete_form.html.twig') }}
{% endblock %}
