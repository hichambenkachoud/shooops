{% extends 'base-back.html.twig' %}

{% block title %}
    {{ 'admin.products.management' | trans }}
{% endblock %}

{% block body %}
    <header class="page-header">
        <h2>{{ 'admin.products.management' | trans }}</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <span><i class="fas fa-map-marker-alt"></i></span>
                </li>
                <li><span>{{ 'admin.products' | trans }}</span></li>
                <li><span>{{ 'admin.list' | trans }}</span></li>
            </ol>

            <a class="sidebar-right-toggle" href="#"></a>
        </div>
    </header>

    <div class="row">
        <div class="col">
            <section class="card card-warning">
                <header class="card-header">
                    <h2 class="card-title"></h2>
                </header>
                <div class="card-body">
                    <div class="col-sm-6">
                        <div class="mb-3">
                        </div>
                    </div>
                    <table class="table table-bordered table-striped mb-0" id="datatable-default">
                        <thead>
                        <tr>
                            <th>{{ 'admin.reference' | trans }}</th>
                            <th>{{ 'admin.name' | trans }}</th>
                            <th>{{ 'admin.price' | trans }}</th>
                            <th>{{ 'admin.enabled' | trans }}</th>
                            <th>{{ 'admin.actions' | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.reference }}</td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.price }}</td>
                                <td>{{ product.enabled ? '<i class="fas fa-check"></i>' : '<i class="fas fa-times"></i>' }}</td>
                                <td>
                                    <a href="{{ path('products_show', {'id': product.id}) }}"><i class="fas fa-eye"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">{{ 'admin.no_records_found' | trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
