{% extends 'base-back.html.twig' %}

{% block title %}
    {{ 'admin.subcategory.management' | trans }}
{% endblock %}

{% block body %}
    <header class="page-header">
        <h2>{{ 'admin.subcategory.management' | trans }}</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <span><i class="fas fa-map-marker-alt"></i></span>
                </li>
                <li><span>{{ 'admin.subcategory' | trans }}</span></li>
                <li><span>{{ 'admin.list' | trans }}</span></li>
            </ol>

            <a class="sidebar-right-toggle" href="#"></a>
        </div>
    </header>

    <div class="row">
    <div class="col">
        <section class="card card-warning">
            <header class="card-header">
                <h2 class="card-title"></h2>
            </header>
            <div class="card-body">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <a class="btn btn-primary btn-sm" href="{{ path('sub_category_new') }}">{{ 'admin.add'|trans }} <i class="fas fa-plus"></i></a>
                    </div>
                </div>
                <table class="table table-bordered table-striped mb-0" id="datatable-default">
                    <thead>
                    <tr>
                        <th>{{ 'admin.code' | trans }}</th>
                        <th>{{ 'admin.name' | trans }}</th>
                        <th>{{ 'admin.category' | trans }}</th>
                        <th>{{ 'admin.enabled' | trans }}</th>
                        <th>{{ 'admin.create_date' | trans }}</th>
                        <th>{{ 'admin.actions' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sub_category in sub_categories %}
                        <tr>
                            <td>{{ sub_category.code }}</td>
                            <td>{{ sub_category.name }}</td>
                            <td>{{ sub_category.category ? sub_category.category.name :  ' ' }}</td>
                            <td>{{ sub_category.enabled ? '<i class="fas fa-check"></i>' : '<i class="fas fa-times"></i>' }}</td>
                            <td>{{ sub_category.createDate ? sub_category.createDate|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('sub_category_show', {'id': sub_category.id}) }}"><i class="fa fa-eye"></i> </a>
                                <a href="{{ path('sub_category_edit', {'id': sub_category.id}) }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">{{ 'admin.no_records_found' | trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </div>
    </div>
{% endblock %}
