<form method="post" action="{{ path('sub_category_delete', {'id': sub_category.id}) }}" onsubmit="return confirm('{{ 'admin.delete.sure' | trans }}');" style="display: inline;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sub_category.id) }}">
    <button class="btn btn-danger btn-sm">{{ 'admin.delete' |trans }}</button>
</form>
