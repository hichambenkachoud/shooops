{% extends 'base-back.html.twig' %}

{% block title %}
    {{ 'admin.subcategory.management' | trans }}
{% endblock %}

{% block body %}
    <header class="page-header">
        <h2>{{ 'admin.subcategory.management' | trans }}</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <span><i class="fas fa-map-marker-alt"></i></span>
                </li>
                <li><span>{{ 'admin.subcategory' | trans }}</span></li>
                <li><span>{{ 'admin.list' | trans }}</span></li>
            </ol>

            <a class="sidebar-right-toggle" href="#"></a>
        </div>
    </header>

    <div class="row">
        <div class="col-md-8">
            <section class="card card-warning">
                <header class="card-header">
                    <h2 class="card-title">{{ 'admin.informations' | trans }}</h2>
                </header>
                <div class="card-body">
                    {{ include('backend/sub_category/_form.html.twig', {'button_label': 'admin.update'}) }}
                </div>
            </section>
        </div>
        <div class="col-md-4">
            <section class="card card-warning">
                <header class="card-header">
                    <h2 class="card-title">{{ 'admin.actions' | trans }}</h2>
                </header>
                <div class="card-body">
                    <a href="{{ path('sub_category_index') }}" class="btn btn-info btn-sm">{{ 'admin.backtolist'|trans }}</a>
                    {{ include('backend/sub_category/_delete_form.html.twig') }}
                </div>
            </section>
        </div>
    </div>

{% endblock %}
